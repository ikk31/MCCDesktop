<Page x:Class="MCCDesktop.Views.ShiftsCal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCCDesktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShiftsCal">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и навигация по месяцам -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="PrevMonthBtn" Content="◀" FontSize="16" Width="30" Height="30" 
                    Background="Transparent" BorderThickness="0"/>
            <TextBlock x:Name="MonthYearText" Text="Январь 2024" FontSize="20" FontWeight="Bold" 
                       Margin="20,0" VerticalAlignment="Center"/>
            <Button x:Name="NextMonthBtn" Content="▶" FontSize="16" Width="30" Height="30" 
                     Background="Transparent" BorderThickness="0"/>
        </StackPanel>

        <!-- Дни недели -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Пн" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="Вт" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="Ср" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="Чт" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="4" Text="Пт" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="5" Text="Сб" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Blue"/>
            <TextBlock Grid.Column="6" Text="Вс" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Red"/>
        </Grid>

        <!-- Сетка календаря -->
        <ItemsControl x:Name="CalendarGrid" Grid.Row="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7" Rows="6"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#DDD" BorderThickness="1" Margin="1" Background="White">
                        <Button x:Name="DayButton" Content="{Binding Day}" 
                                Tag="{Binding}"
                                
                                Background="Transparent" BorderThickness="0"
                                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Добавить смену"/>
                                    <MenuItem Header="Просмотр смен" />
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Панель информации о выбранном дне -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#CCC" BorderThickness="1" 
                Margin="0,20,0,0" Padding="15" Visibility="Collapsed" x:Name="DayInfoPanel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="SelectedDateText" Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ShiftsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding EmployeeName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding WorkPoint}" Foreground="#666" FontSize="12"/>
                                            <TextBlock Text="{Binding TimeRange}" Foreground="#666" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="✏️" FontSize="12" Margin="2" 
                                                    Tag="{Binding}" 
                                                    ToolTip="Редактировать смену"/>
                                            <Button Content="❌" FontSize="12" Margin="2" 
                                                    Tag="{Binding}" 
                                                    ToolTip="Удалить смену"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Button x:Name="AddShiftBtn" Grid.Row="2" Content="+ Добавить смену" 
                        HorizontalAlignment="Left" Margin="0,10,0,0"
                         Background="#6F4E37" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
    
</Page>
