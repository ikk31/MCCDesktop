<Page x:Class="MCCDesktop.Views.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCCDesktop.Views" 
      xmlns:Instruments="clr-namespace:MCCDesktop.HelpClass"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage">

    <Page.Resources>
        <Instruments:ImageLoad x:Key="ImageLoad"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка добавления сотрудника -->
        <Button x:Name="AddEmployeeButton" 
            Content="Добавить сотрудника" 
            Margin="10" 
            HorizontalAlignment="Left" 
            Background="#6F4E37" 
            Foreground="White" 
            Padding="10,5"
            Click="AddEmployeeButton_Click"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="EmployeesItemsControl" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="150" Height="200" Margin="10" BorderBrush="LightGray" BorderThickness="1">
                            <StackPanel>
                                <Image x:Name="EmployeePhoto"  Source="{Binding PhotoPath, Converter={StaticResource ImageLoad}}" Height="100" Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding LastName}" HorizontalAlignment="Center" Foreground="Gray"/>
                                <Button x:Name="InfoEmployee" Content="Подробнее" Margin="5" Background="#6F4E37" Tag="{Binding}" Foreground="White" Click="InfoEmployee_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</Page>
