<Page x:Class="MCCDesktop.Views.Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCCDesktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Employee">

   
        <Grid>
            <ScrollViewer>
                <WrapPanel x:Name="EmployeesPanel" Margin="10">
                    <!-- Карточки сотрудников будут добавляться динамически -->
                <UserControl>
                    <Border Width="150" Height="200" Margin="10" BorderBrush="LightGray" BorderThickness="1">
                        <StackPanel>
                            <Image Source="{Binding PhotoPath}" Height="100" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding FullName}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Position}" HorizontalAlignment="Center" Foreground="Gray"/>
                            <Button Content="Подробнее" Margin="5" Background="#6F4E37" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </UserControl>
            </WrapPanel>
            </ScrollViewer>
        </Grid>
    
</Page>
