<Window x:Class="MCCDesktop.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCCDesktop.Views"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!--<Image Source="/Assets/coffee_logo.png" Height="100" Margin="0,0,0,20"/>-->
            <Label Content="Логин"/>
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
            <Button Content="Войти"  Background="#6F4E37" Foreground="White"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
