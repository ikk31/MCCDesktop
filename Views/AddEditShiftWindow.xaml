<Window x:Class="MCCDesktop.Views.AddEditShiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавление смены" 
        Height="720" 
        Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#6F4E37" 
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="PageTitle" 
                          Text="Добавление смены" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock x:Name="ShiftIdText" 
                          Text="" 
                          FontSize="12"
                          Foreground="#FFD180"
                          Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="0,0,5,0">
            <StackPanel>

                <!-- Дата смены -->
                <GroupBox Header="Дата смены" FontWeight="Bold" Margin="0,0,0,10">
                    <DatePicker x:Name="ShiftDatePicker" 
                               Height="35"
                               SelectedDateFormat="Short"/>
                </GroupBox>

                <!-- Сотрудник -->
                <GroupBox Header="Сотрудник *" FontWeight="Bold" Margin="0,0,0,10">
                    <StackPanel>
                        <ComboBox x:Name="EmployeeComboBox" 
                                 Height="35"
                                 DisplayMemberPath="FullName"/>
                        <TextBlock Text="Выберите сотрудника" 
                                  FontSize="11" 
                                  Foreground="#666"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Рабочая точка -->
                <GroupBox Header="Рабочая точка *" FontWeight="Bold" Margin="0,0,0,10">
                    <StackPanel>
                        <ComboBox x:Name="WorkplaceComboBox" 
                                 Height="35"
                                 DisplayMemberPath="Name"/>
                        <TextBlock x:Name="WorkplaceCountText" 
                                  Text="Доступно точек: 0" 
                                  FontSize="11" 
                                  Foreground="#666"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Время смены -->
                <GroupBox Header="Время смены *" FontWeight="Bold" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Поля времени -->
                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <TextBox x:Name="StartTimeTextBox" 
                                    Width="80" 
                                    Height="35" 
                                    Text="09:00" 
                                    TextAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    MaxLength="5"/>
                            <TextBlock Text=" — " 
                                      VerticalAlignment="Center" 
                                      Margin="10,0,10,0" 
                                      FontWeight="Bold"/>
                            <TextBox x:Name="EndTimeTextBox" 
                                    Width="80" 
                                    Height="35" 
                                    Text="18:00" 
                                    TextAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    MaxLength="5"/>
                        </StackPanel>

                        <!-- Длительность -->
                        <StackPanel Grid.Row="1" 
                                   Orientation="Horizontal" 
                                   Margin="0,10,0,0">
                            <TextBlock Text="Продолжительность: " 
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="DurationText" 
                                      Text="0 ч 0 мин" 
                                      FontWeight="Bold"
                                      Foreground="#2196F3"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Перерыв -->
                <GroupBox Header="Обеденный перерыв" FontWeight="Bold" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <TextBox x:Name="BreakHourTextBox" 
                                    Width="50" 
                                    Height="35" 
                                    Text="1" 
                                    TextAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    MaxLength="2"/>
                            <TextBlock Text=" ч " 
                                      VerticalAlignment="Center" 
                                      Margin="5,0,5,0"/>
                            <TextBox x:Name="BreakMinuteTextBox" 
                                    Width="50" 
                                    Height="35" 
                                    Text="00" 
                                    TextAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    MaxLength="2"/>
                            <TextBlock Text=" мин" 
                                      VerticalAlignment="Center" 
                                      Margin="5,0,0,0"/>
                        </StackPanel>
                        <CheckBox x:Name="NoBreakCheckBox" 
                                 Content="Без перерыва" 
                                 Margin="0,10,0,0" 
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

                <!-- Ставка -->
                <GroupBox Header="Ставка (руб/час) *" FontWeight="Bold" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="HourlyRateTextBox" 
                                    Width="70" 
                                    Height="35" 
                                    Text="500" 
                                    TextAlignment="Right"
                                    VerticalContentAlignment="Center"/>
                            <TextBlock Text=" ₽/час" 
                                      VerticalAlignment="Center" 
                                      Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right">
                            <Button x:Name="BaseRateBtn" 
                                   Content="Базовая" 
                                   Padding="8,5" 
                                   Margin="0,0,5,0"/>
                            <Button x:Name="CustomRateBtn" 
                                   Content="Из списка" 
                                   Padding="8,5"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Комментарий -->
                <GroupBox Header="Комментарий" FontWeight="Bold" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBox x:Name="NotesTextBox" 
                                Height="80" 
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                MaxLength="500"/>
                        <StackPanel Orientation="Horizontal" 
                                   Margin="0,5,0,0">
                            <TextBlock Text="Осталось символов: " 
                                      FontSize="11" 
                                      Foreground="#666"/>
                            <TextBlock x:Name="RemainingCharsText" 
                                      Text="500" 
                                      FontSize="11" 
                                      Foreground="#2196F3" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Расчет -->
                <Border Background="#F5F5F5" 
                        CornerRadius="5" 
                        Padding="15"
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Предварительный расчет" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Общее время:"/>
                            <TextBlock x:Name="TotalTimeText" 
                                      Grid.Row="0" Grid.Column="1" 
                                      Text="0 ч 0 мин"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Перерыв:"/>
                            <TextBlock x:Name="BreakTimeText" 
                                      Grid.Row="1" Grid.Column="1" 
                                      Text="0 ч 0 мин"/>

                            <Rectangle Grid.Row="2" 
                                      Grid.Column="0" 
                                      Grid.ColumnSpan="2" 
                                      Height="1" 
                                      Fill="#E0E0E0" 
                                      Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Отработано:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="WorkedHoursText" 
                                      Grid.Row="3" Grid.Column="1" 
                                      Text="0.00 ч" 
                                      FontWeight="Bold" 
                                      Foreground="#2196F3"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Ставка:"/>
                            <TextBlock x:Name="RateText" 
                                      Grid.Row="4" Grid.Column="1" 
                                      Text="0 ₽/ч"/>

                            <Rectangle Grid.Row="5" 
                                      Grid.Column="0" 
                                      Grid.ColumnSpan="2" 
                                      Height="1" 
                                      Fill="#E0E0E0" 
                                      Margin="0,5"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" 
                                       Text="ИТОГО:" 
                                       FontWeight="Bold" 
                                       FontSize="14"/>
                            <TextBlock x:Name="TotalAmountText" 
                                      Grid.Row="6" Grid.Column="1" 
                                      Text="0.00 ₽" 
                                      FontWeight="Bold" 
                                      FontSize="14" 
                                      Foreground="#4CAF50"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="0,10,0,0"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="ErrorMessageText" 
                          Grid.Column="0"
                          Text="" 
                          Foreground="Red"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                <Button x:Name="CancelButton" 
                       Grid.Column="1"
                       Content="Отмена" 
                       Width="100" 
                       Height="35"
                       Margin="0,0,10,0"/>

                <Button x:Name="SaveButton" 
                       Grid.Column="2"
                       Content="Сохранить" 
                       Width="120" 
                       Height="35"
                       Background="#6F4E37" 
                       Foreground="White"
                       FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</Window>