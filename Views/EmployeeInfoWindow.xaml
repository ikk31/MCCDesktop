<Window x:Class="MCCDesktop.Views.EmployeeInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCCDesktop.Views"
        xmlns:Instruments="clr-namespace:MCCDesktop.HelpClass"
        mc:Ignorable="d"
        Title="EmployeeInfoWindow" Height="450" Width="800">
    <Window.Resources>
        <Instruments:DateConverter x:Key="DateConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
        </Style>
        
        
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая колонка - фото -->
        <Border Grid.Column="0" 
                Width="180" 
                Height="220"
                Background="White"
                BorderBrush="#dddddd" 
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,0,20,0">
            <Grid>
                <Image x:Name="EmployeePhoto"
                       
                       Stretch="Uniform"
                       Margin="10"/>
                <Border Background="#80000000" 
                        VerticalAlignment="Bottom"
                        Height="30">
                    <Button Name ="AddPhoto" Content="Добавить новое фото" Click="AddPhoto_Click"/>
                </Border>
            </Grid>
        </Border>

        <!-- Правая колонка - информация -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Информация о сотруднике" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="#2c3e50"
                      Margin="0,0,0,20"/>

            <!-- Имя -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="Имя:" 
                          FontWeight="SemiBold"/>
                <TextBox Grid.Column="1" 
                        x:Name="FirstNameTextBox"
                        Text="{Binding Name}"/>
            </Grid>

            <!-- Фамилия -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="Фамилия:" 
                          FontWeight="SemiBold"/>
                <TextBox Grid.Column="1" 
                        x:Name="LastNameTextBox"
                         Text="{Binding LastName}"
                        />
            </Grid>

            <!-- Должность -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="Должность:" 
                          FontWeight="SemiBold"/>
                <ComboBox Grid.Column="1" 
                        x:Name="PositionTextBox"
                        SelectedValue="{Binding IdJobTitle}" 
                         DisplayMemberPath="Name"
                         SelectedValuePath="IdJobTitle"
                         />
            </Grid>

            <!-- Дата устройства -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="Дата устройства:" 
                          FontWeight="SemiBold"/>
                <DatePicker Grid.Column="1" 
                           x:Name="HireDatePicker"
                           SelectedDate="{Binding HireDate,Converter={StaticResource DateConverter}}"
                           DisplayDateStart="2000-01-01"
                            Focusable="False"            
                            />
                
            </Grid>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="0,20,0,0">
                <Button x:Name="SaveButton" 
                        Content="Сохранить" 
                        Width="100" 
                        Height="35"
                        Background="#3498db" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"/>

                <Button x:Name="CloseButton" 
                        Content="Закрыть" 
                        Width="100" 
                        Height="35"
                        Background="#95a5a6" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
